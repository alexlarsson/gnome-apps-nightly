{
    "app-id": "org.gnome.eog",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.20",
    "branch": "stable",
    "sdk": "org.gnome.Sdk",
    "command": "eog",
    "rename-desktop-file": "eog.desktop",
    "rename-appdata-file": "eog.appdata.xml",
    "rename-icon": "eog",
    "tags": [],
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=x11",
        /* Wayland access */
        "--socket=wayland",
        /* We want full fs access so we can read the files */
        "--filesystem=host",
        /* Needed for dconf to work */
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "*.la", "*.a"],
    "modules": [
        {
            "name": "gnome-desktop",
            "config-opts": ["--disable-debug-tools"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-desktop/3.20/gnome-desktop-3.20.1.tar.xz",
                    "sha256": "6eac7b2b1a9672685028b81d2b06cb45449f967e66dd41724bc4a9596941c140"
                }
            ]
        },
        {
            "name": "libpeas",
            "cleanup": [ "/bin/*", "/lib/peas-demo" ],
            "config-opts": [ ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libpeas/1.18/libpeas-1.18.0.tar.xz",
                    "sha256": "bf49842c64c36925bbc41d954de490b6ff7faa29b45f6fd9e91ddcc779165e26"
                }
            ]
        },
        {
            "name": "eog",
            "config-opts": [ ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/eog/3.20/eog-3.20.1.tar.xz",
                    "sha256": "4f021988f1b24b4d575f85fc789596194a6e890af3fa9b2b8e4f493fc3df8352"
                }
            ]
        }
    ]
}
